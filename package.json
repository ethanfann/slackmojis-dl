{
	"name": "slackmojis-dl",
	"version": "3.0.0",
	"description": "Downloads all emojis from https://slackmojis.com",
	"type": "module",
	"main": "dist/cli.js",
	"author": "Ethan Fann",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"start": "tsx src/cli.tsx",
		"test": "ava",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"update:metadata": "tsx scripts/update-slackmojis-metadata.ts",
		"prepublishOnly": "npm run build && npm run update:metadata"
	},
	"files": [
		"dist",
		"data"
	],
	"ava": {
		"files": [
			"test/**/*.test.ts"
		],
		"extensions": [
			"ts"
		],
		"nodeArguments": [
			"--import=tsx/esm"
		]
	},
	"bin": {
		"slackmojis-dl": "dist/cli.js"
	},
	"dependencies": {
		"commander": "^12.1.0",
		"glob": "^7.2.0",
		"ink": "^6.3.1",
		"react": "^19.2.0",
		"undici": "^7.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.14.9",
		"@types/react": "^19.0.0",
		"ava": "^3.15.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.3"
	},
	"engines": {
		"node": ">=20"
	}
}
